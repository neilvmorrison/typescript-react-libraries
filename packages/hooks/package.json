    "test": "vitest"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "hooks",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
