{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@components": ["./src/index.ts"],
      "@components/*": ["./src/*"],
      "@types": ["./src/lib/types/index.ts"],
      "@types/*": ["./src/lib/types/*"],
      "@primitives": ["./src/lib/primitives/index.ts"],
      "@primitives/*": ["./src/lib/primitives/*"],
      "@utilities": ["./src/lib/utilities/index.ts"],
      "@utilities/*": ["./src/lib/utilities/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.config.ts"
  ]
}
